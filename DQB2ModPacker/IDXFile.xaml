<UserControl x:Class="DQB2ModPacker.IDXFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DQB2ModPacker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding FilePath}" HorizontalAlignment="Center" Margin="2"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox ItemsSource="{Binding DataContext.Versions, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <ListBox Grid.Column="1" ItemsSource="{Binding VersionsIndex}" MouseDoubleClick="EditNumber"/>
        </Grid>
        
    </StackPanel>
</UserControl>
