<Window x:Class="DQB2ModPacker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQB2ModPacker"
        mc:Ignorable="d"
        Title="DQB2 Mod Packer Tool" Height="450" Width="800">
       <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Add Version" Click="ButtonVersion_Click"/>
            <Button Grid.Column="1" Content="Select Version" Click="ButtonVersionSelect_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            <ListBox x:Name="ItemsListBox"  ItemsSource="{Binding Files}" PreviewMouseRightButtonDown="Delete_file"/>
        </Grid>
        <Button Grid.Row="2" Content="AddFile" Click="Button_Click"/>
        <Button Grid.Row="3" Content="Pack" Click="PackAlgorithm" Margin="0,5,0,0"/>
    </Grid>
</Window>
